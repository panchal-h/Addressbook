@model IEnumerable<RealmDigital.Models.ContactEmail>
@{
    ViewBag.Title = "Contact Email";
    Layout = null;
}

<p>
    @Html.ActionLink("Add Email", "AddContactEmail", "Contact", new { contactId = ViewBag.ContactId }, new { style="float:right;", data_modal = "email" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td width="80%">
                @Html.DisplayFor(model => item.EmailAddress)
            </td>
            <td align="right">
                @Html.ActionLink("Edit", "EditContactEmail", "Contact", new { id = item.ID, contactId = ViewBag.ContactId }, new { @class = "edit-svg", data_modal = "email" })
                @Html.ActionLink("Delete", "DeleteContactEmail", "Contact", new { id = item.ID, contactId = ViewBag.ContactId }, new { @class = "delete-svg", data_modal = "email" })
            </td>
        </tr>
    }
</table>